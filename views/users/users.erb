<div class="container">
    <div class="text-center my-3">
        <h1>게시판 입니다.</h1>
    </div>
    <div class="text-right my-3">
        <a class="btn btn-primary" role="button" href="/posts/new">글 쓰러가기</a>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">제목</th>
          <th scope="col">내용</th>
          <th scope="col">작성일자</th>
          <th scope="col">보기</th>
        </tr>
      </thead>
      <tbody>
        <% @users.reverse.each do |p| %>
        <tr>
          <th scope="row"><%= p.id %></th>
          <td><%= p.name %></td>
          <td><%= p.email %></td>
          <td><%= p.password %></td>
          <td><a href="posts/<%= p.id %>">링크</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>